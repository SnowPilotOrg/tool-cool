{
	"name": "@snowpilot/tool-cool",
	"module": "./dist/index.js",
	"version": "0.1.0",
	"description": "Zod schemas to simplify tool calls for popular SaaS APIs",
	"keywords": [
		"zod",
		"schema",
		"typescript",
		"hubspot",
		"saas",
		"api",
		"tool call",
		"openai"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "rm -rf ./dist && bun build ./src/index.ts --outdir ./dist && tsc --emitDeclarationOnly --declaration --outDir ./dist",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf ./dist",
		"test": "bun test",
		"format": "biome format --write .",
		"lint": "biome check --write .",
		"prepublishOnly": "npm run build"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "^1.1.13",
		"@types/node": "^22.9.0",
		"openai": "^4.72.0",
		"zod": "^3.23.8"
	},
	"peerDependencies": {
		"typescript": "^5.6.3",
		"openai": "^4.72.0",
		"zod": "^3.23.8"
	},
	"dependencies": {
		"zod-to-json-schema": "^3.23.5"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	}
}
